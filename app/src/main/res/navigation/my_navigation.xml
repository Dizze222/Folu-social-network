<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/mainFragments">

    <fragment
        android:id="@+id/mainFragments"
        android:name="ch.b.retrofitandcoroutines.ui.screens.MainFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_mainFragment_to_detailInfo"
            app:destination="@id/detailInfo" />
        <argument
            app:argType="string"
            android:name="category"/>
    </fragment>
    <fragment
        android:id="@+id/detailInfo"
        android:name="ch.b.retrofitandcoroutines.ui.screens.DetailInfoFragment"
        android:label="fragment_detail_info"
        tools:layout="@layout/fragment_detail_info" >
        <action
            android:id="@+id/action_detailInfo_to_mainFragment"
            app:destination="@id/mainFragments" />
    </fragment>
</navigation>